{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 300,
    "width": "container",
    "title": "Undergraduate Salary vs Median Personal Income (2016-2023)",
    "data": {
      "url": "./data/median_salaries_2016_2023.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "fold": ["Domestic Undergraduate Median Salary", "Median Personal Income"],
        "as": ["Income Type", "Salary"]
      },
      {
        "filter": "datum.Year == YearSelector"
      }
    ],
    "layer": [
      {
        "mark": {"type": "arc", "innerRadius": 100},
        "encoding": {
          "theta": {"field": "Salary", "type": "quantitative"},
          "color": {"field": "Income Type", "type": "nominal"},
          "tooltip": [
            {"field": "Year", "type": "ordinal"},
            {"field": "Income Type", "type": "nominal"},
            {"field": "Salary", "type": "quantitative", "format": "$,.0f"}
          ]
        }
      }
    ],
    "view": {"stroke": null},
    "params": [
      {
        "name": "YearSelector",
        "bind": {
          "input": "range",
          "min": 2016,
          "max": 2023,
          "step": 1,
          "name": "Select Year: "
        },
        "value": 2023
      }
    ],
    "config": {
      "arc": {"stroke": null},
      "legend": 
      {
        "title": "Income Type",
        "orient": "bottom"
    }
      
    }
  }
  