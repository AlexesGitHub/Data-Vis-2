{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 20 Jobs Ranked by Salary From SEEK in 2023",
  "width": 700,
  "height": 350,
  "data": {
    "url": "./data/top_20_jobs.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "calculate": "toNumber(replace(datum.salary, /[$,]/g, ''))",
      "as": "cleaned_salary"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "cleaned_salary",
      "type": "quantitative",
      "axis": {"title": "Salary", "format": "$,.0f"}
    },
    "y": {
      "field": "job title",
      "type": "nominal",
      "sort": "-x",
      "axis": {"title": "Job Title"}
    },
    "color": {
      "field": "requires higher education",
      "type": "nominal",
      "scale": {
        "domain": ["Yes", "No"],
        "range": ["#1f77b4", "#808080"]
      },
      "legend": {"title": "Requires Higher Education"}
    },
    "tooltip": [
      {"field": "job title", "type": "nominal", "title": "Job Title"},
      {"field": "cleaned_salary", "type": "quantitative", "title": "Salary", "format": "$,.0f"},
      {"field": "requires higher education", "type": "nominal", "title": "Higher Education"}
    ]
  }
}
