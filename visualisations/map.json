{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 250,
  "title": "Percentage of Individuals With a Bachelor's Degree by Region 2021",
  "data": {
    "url": "https://raw.githubusercontent.com/AlexesGitHub/FIT3179/refs/heads/main/GCCSA_2021_AUST_GDA2020.json",
    "format": {
      "type": "topojson",
      "feature": "GCCSA_2021_AUST_GDA2020"
    }
  },
  "projection": {
    "type": "equirectangular",
    "scale": 400,  
    "center": [140, -33],
    "translate": [250, 175]
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "#d0e4f7"
      }
    },
    {
      "data": {
        "graticule": {
          "step": [10, 10]
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightgray",
        "strokeWidth": 1
      }
    },
    {
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.STE_NAME21",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/AlexesGitHub/FIT3179/refs/heads/main/Bachelor_s_Degree_Data.csv",
              "format": {
                "type": "csv"
              }
            },
            "key": "State",
            "fields": ["2021 data"]
          }
        }
      ],
      "selection": {
        "hover": {
          "type": "single",
          "on": "mouseover",
          "empty": "all",
          "fields": ["properties.STE_NAME21"]
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 2
      },
      "encoding": {
        "color": {
          "field": "2021 data",
          "type": "quantitative",
          "scale": {
            "scheme": "lighttealblue"
          },
          "legend": {
            "title": "Bachelor's Degree Holders (%)",
            "labelLimit": 500,
            "orient": "bottom"
          }
        },
        "opacity": {
          "condition": {
            "selection": "hover",
            "value": 1 
          },
          "value": 0.2
        },
        "tooltip": [
          { "field": "properties.STE_NAME21", "type": "nominal", "title": "Region" },
          { "field": "2021 data", "type": "quantitative", "title": "Bachelor's Degree (%)" }
        ]
      }
    }
  ]
}
