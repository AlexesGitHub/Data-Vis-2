{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "Tree map of job salaries and higher education requirement",
    "width": 1100,
    "height": 350,
    "autosize": {
      "type": "fit",
      "contains": "padding"
    },
    "data": [
      {
        "name": "jobs",
        "url": "./data/top_20_jobs.csv",
        "format": {
          "type": "csv"
        }
      },
      {
        "name": "tree",
        "source": "jobs",
        "transform": [
          {
            "type": "formula",
            "expr": "toNumber(replace(datum.salary, /[$,]/g, ''))",
            "as": "cleaned_salary"
          },
          {
            "type": "nest",
            "keys": ["job field", "job title"],
            "sort": {"field": "job field", "order": "ascending"}
          },
          {
            "type": "treemap",
            "field": "cleaned_salary",
            "sort": {"field": "cleaned_salary", "order": "descending"},
            "size": [{"signal": "width"}, {"signal": "height"}],
            "as": ["x0", "y0", "x1", "y1"]
          }
        ]
      }
    ],
    "marks": [
      {
        "type": "rect",
        "from": {"data": "tree"},
        "encode": {
          "enter": {
            "x": {"field": "x0"},
            "y": {"field": "y0"},
            "x2": {"field": "x1"},
            "y2": {"field": "y1"},
            "fill": {
              "scale": "color",
              "field": "requires higher education"
            },
            "stroke": {"value": "#ffffff"},
            "strokeWidth": {"value": 1} 
          },
          "update": {
            "fillOpacity": {"value": 0.7}
          },
          "hover": {
            "fillOpacity": {"value": 1},
            "tooltip": {
              "signal": "{'Job Title': datum['job title'], 'Job Field': datum['job field'], 'Salary': format(datum.cleaned_salary, '$,.2f'), 'Requires Higher Education': datum['requires higher education']}"
            }
          }
        }
      },
      {
        "type": "text",
        "from": {"data": "tree"},
        "encode": {
          "enter": {
            "x": {"field": "x0", "offset": 2},
            "y": {"field": "y0", "offset": 13},
            "text": {"field": "job title"},
            "fontSize": {"value": 12},
            "fill": {"value": "black"},
            "align": {"value": "left"},
            "baseline": {"value": "top"}
          },
          "update": {
            "fillOpacity": {
              "signal": "(datum.x1 - datum.x0) > 100 && (datum.y1 - datum.y0) > 25 ? 1 : 0"
            }
          }
        }
      }
    ],
    "scales": [
      {
        "name": "color",
        "type": "ordinal",
        "domain": ["Yes", "No"],
        "range": ["#1f77b4", "#ff7f0e"]
      }
    ],
    "legends": [
      {
        "fill": "color",
        "title": "Requires Higher Education",
        "orient": "right"
      }
    ]
  }
  